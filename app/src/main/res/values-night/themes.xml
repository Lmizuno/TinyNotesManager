<resources>
    <!-- Base application theme.
     https://coolors.co/1a0103-180106-010a0f-011015-021e2d
     -->
    <style name="Theme.SmallNotesManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_faded</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorContainer">@color/secondary_faded</item>
        <item name="colorOnBackground">@color/primary_faded</item>

        <item name="font">@color/white</item>
        <item name="iconTint">@color/white</item>

        <item name="secondaryFont">@color/secondary_faded</item>
        <item name="primaryButtonTint">@color/primary_variant_faded</item>
        <item name="cursorColor">@color/white</item>

        <item name="inputHighlight">@color/primary_variant_faded</item>

    </style>

    <style name="Theme.SmallNotesManager.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorContainer">?attr/colorSecondary</item>
        <item name="colorOnBackground">?attr/colorPrimary</item>

        <item name="font">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="primaryButtonTint">@color/primary_variant_faded</item>
        <item name="cursorColor">@color/white</item>

        <item name="inputHighlight">@color/primary_variant_faded</item>
    </style>
</resources>