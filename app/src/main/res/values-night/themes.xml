<resources>
    <!-- Base application theme.
     https://coolors.co/1a0103-180106-010a0f-011015-021e2d
     -->
    <style name="Theme.SmallNotesManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/color_on_secondary_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorContainer">?attr/colorSecondary</item>
        <item name="colorOnBackground">?attr/colorPrimary</item>

        <item name="font">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.SmallNotesManager.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/color_on_secondary_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorContainer">?attr/colorSecondary</item>
        <item name="colorOnBackground">?attr/colorPrimary</item>

        <item name="font">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>